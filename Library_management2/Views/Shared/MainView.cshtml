<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sydenham Library</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/lmscustom.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="padding:unset">
    <div>
        <div style="background-color:#d9534f;">
            <div style="background-color:#292b2c; height:8px; width:450px">
            </div>
        </div>
        <div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <span class="icon">
                    <i class="fas fa-book-open"></i>
                </span>
                @Html.ActionLink("Sydenham Library", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item btn-sm btn-dark">
                            <i class="fas fa-home"></i>
                            @Html.ActionLink("Home", "Home", "Home", null, new { @class = "nav-link icon", style = "display:inline" })
                        </li>
                        <li class="nav-item btn-sm btn-dark">
                            <i class="fas fa-book-open"></i>
                            @Html.ActionLink("Books", "Login", "UserLogin", null, new { @class = "nav-link icon", style = "display:inline" })
                        </li>
                        <li class="nav-item btn-sm btn-dark">
                            <i class="fas fa-address-card"></i>
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link icon", style = "display:inline" })
                        </li>
                        <li class="nav-item btn-sm btn-dark">
                            <i class="fas fa-id-badge"></i>
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link icon", style = "display:inline" })
                        </li>
                    </ul>

                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item btn-sm btn-dark">
                            <i class="fas fa-sign-in-alt"></i>
                            @Html.ActionLink("Login", "Login", "Home", null, new { @class = "nav-link icon", style = "display:inline" })
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        

    </div>
    <div style="padding-left:20px; padding-right:20px;">
        @RenderBody()
    </div>
    <div>
        <footer>
            <div style="" class="card text-center text-white bg-dark">
                <div class="card-header">
                    Thank you for visiting us
                </div>
                <div class="card-body">
                    <h5 class="card-title">Social Platforms</h5>
                    <div style="width: auto;" class="form-group">
                        <span>
                            <i class="fab fa-facebook-square"></i>
                        </span>
                        <span>
                            <i class="fab fa-twitter-square"></i>
                        </span>
                        <span>
                            <i class="fab fa-instagram"></i>
                        </span>
                    </div>
                </div>
                <p>&copy; @DateTime.Now.Year - UrLMS</p>
            </div>
        </footer>
    </div>
    <div style="background-color:#d9534f;">
        <div style="background-color:#292b2c; height:8px; width:450px">
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>